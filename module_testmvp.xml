<?xml version="1.0" encoding="UTF-8"?>
<project name="module_testmvp" default="compile.module.testmvp">
  <dirname property="module.testmvp.basedir" file="${ant.file.module_testmvp}"/>
  
  <property name="module.jdk.home.testmvp" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.testmvp" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.testmvp" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.testmvp" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="testmvp.output.dir" value="${module.testmvp.basedir}/out/production/TestMVP"/>
  <property name="testmvp.testoutput.dir" value="${module.testmvp.basedir}/out/test/TestMVP"/>
  
  <path id="testmvp.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="testmvp.module.production.classpath">
    <path refid="${module.jdk.classpath.testmvp}"/>
    <pathelement location="${idea.home}/lib/hamcrest-core-1.3.jar"/>
    <pathelement location="${idea.home}/lib/junit-4.12.jar"/>
    <path refid="library.gson-2.4.classpath"/>
  </path>
  
  <path id="testmvp.runtime.production.module.classpath">
    <pathelement location="${testmvp.output.dir}"/>
    <pathelement location="${idea.home}/lib/hamcrest-core-1.3.jar"/>
    <pathelement location="${idea.home}/lib/junit-4.12.jar"/>
    <path refid="library.gson-2.4.classpath"/>
  </path>
  
  <path id="testmvp.module.classpath">
    <path refid="${module.jdk.classpath.testmvp}"/>
    <pathelement location="${testmvp.output.dir}"/>
    <pathelement location="${idea.home}/lib/hamcrest-core-1.3.jar"/>
    <pathelement location="${idea.home}/lib/junit-4.12.jar"/>
    <path refid="library.gson-2.4.classpath"/>
  </path>
  
  <path id="testmvp.runtime.module.classpath">
    <pathelement location="${testmvp.testoutput.dir}"/>
    <pathelement location="${testmvp.output.dir}"/>
    <pathelement location="${idea.home}/lib/hamcrest-core-1.3.jar"/>
    <pathelement location="${idea.home}/lib/junit-4.12.jar"/>
    <path refid="library.gson-2.4.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.testmvp">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.testmvp">
    <patternset refid="excluded.from.module.testmvp"/>
  </patternset>
  
  <path id="testmvp.module.sourcepath">
    <dirset dir="${module.testmvp.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.testmvp" depends="compile.module.testmvp.production,compile.module.testmvp.tests" description="Compile module TestMVP"/>
  
  <target name="compile.module.testmvp.production" depends="register.custom.compilers" description="Compile module TestMVP; production classes">
    <mkdir dir="${testmvp.output.dir}"/>
    <javac2 destdir="${testmvp.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.testmvp}/javac">
      <compilerarg line="${compiler.args.testmvp}"/>
      <bootclasspath refid="testmvp.module.bootclasspath"/>
      <classpath refid="testmvp.module.production.classpath"/>
      <src refid="testmvp.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.testmvp"/>
    </javac2>
    
    <copy todir="${testmvp.output.dir}">
      <fileset dir="${module.testmvp.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.testmvp.tests" depends="register.custom.compilers,compile.module.testmvp.production" description="compile module TestMVP; test classes" unless="skip.tests"/>
  
  <target name="clean.module.testmvp" description="cleanup module">
    <delete dir="${testmvp.output.dir}"/>
    <delete dir="${testmvp.testoutput.dir}"/>
  </target>
</project>